<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project.ProductDetails">
    <ImageView fx:id="image" fitHeight="344.0" fitWidth="300.0" layoutY="56.0" pickOnBounds="true" preserveRatio="true" />
    <Label fx:id="name" layoutX="316.0" layoutY="14.0" prefHeight="27.0" prefWidth="207.0" text="Label">
      <font>
         <Font name="Calibri Bold" size="16.0" />
      </font></Label>
    <Label fx:id="description" alignment="TOP_LEFT" layoutX="316.0" layoutY="65.0" prefHeight="185.0" prefWidth="270.0" text="Label" wrapText="true" />
    <Button fx:id="addToCart" layoutX="316.0" layoutY="343.0" mnemonicParsing="false" onAction="#onAddToCartClick" prefHeight="35.0" prefWidth="270.0" text="Add To Cart">
        <font>
          <Font name="System Bold" size="13.0" />
        </font>
    </Button>
    <Label fx:id="amount" alignment="CENTER" layoutX="409.0" layoutY="260.0" prefHeight="35.0" prefWidth="85.0" text="0" />
    <Button fx:id="minus" layoutX="316.0" layoutY="260.0" mnemonicParsing="false" onAction="#onMinusClick" prefHeight="35.0" prefWidth="53.0" text="-">
        <font>
          <Font name="System Bold" size="18.0" />
        </font>
    </Button>
    <Button fx:id="plus" layoutX="533.0" layoutY="260.0" mnemonicParsing="false" onAction="#onPlusClick" prefHeight="35.0" prefWidth="53.0" text="+">
        <font>
          <Font name="System Bold" size="18.0" />
        </font>
    </Button>
    <Label fx:id="price" alignment="CENTER_RIGHT" layoutX="509.0" layoutY="14.0" prefHeight="27.0" prefWidth="78.0" text="Label">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    <Label fx:id="stockNumber" alignment="CENTER" layoutX="409.0" layoutY="301.0" prefHeight="35.0" prefWidth="85.0" text="Label" />
   <Hyperlink layoutX="14.0" layoutY="14.0" onAction="#onBackClicked" prefHeight="29.0" prefWidth="43.0" text="Back" textFill="RED">
      <font>
         <Font size="15.0" />
      </font>
   </Hyperlink>
</AnchorPane>
